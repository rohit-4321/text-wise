{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["node_modules", "dist"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"nursery": {
				"useStrictMode": "error"
			},

			"suspicious": {
				"noConsoleLog":"warn"
			},
			"style": {
				"noVar": "error"
			},
			"correctness": {
				"noUndeclaredVariables": "error"
			}
		}
				
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		},
		"linter": {
			"enabled": true
		},
		"globals": ["chrome"]
	
	}
}
