{
  "compilerOptions": {
    "rootDir": "./",                                  
    "outDir": "dist",                         
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",  
    "target": "ESNext",  
    "moduleResolution": "node",
    "esModuleInterop": true,   
    "strict": true,            
    "sourceMap": true,
    "skipLibCheck": true       
  },
  "include": ["src/**/*"],
  "exclude": ["node_modeules", "dist"]
}
